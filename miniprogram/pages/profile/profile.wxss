.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(74, 144, 226, 0.3);
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

.role-tag, .status-tag {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 功能菜单 */
.menu-section {
  margin: 20rpx;
}

.menu-group {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 退出登录按钮 */
.logout-section {
  margin: 40rpx 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: background-color 0.2s;
}

.logout-btn:active {
  background: #e74c3c;
}

/* 登录提示 */
.login-tip {
  margin: 40rpx 20rpx;
  text-align: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
}

/* 权限提示 */
.permission-tip {
  margin: 20rpx 20rpx 0 20rpx;
  padding: 24rpx;
  background: #fff6f6;
  border: 1rpx solid #ffe3e3;
  border-radius: 12rpx;
  color: #c0392b;
  font-size: 26rpx;
}

.tip-text {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.login-btn {
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 44rpx;
  height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 版本信息 */
.version-info {
  text-align: center;
  margin-top: 60rpx;
  padding: 20rpx;
}

.version-text {
  color: #999;
  font-size: 24rpx;
}





