/* 对话页面样式 */

/* 调试信息样式 */
.debug-info {
  background: #FFF3E0;
  border: 1rpx solid #FFB74D;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.debug-text {
  font-size: 24rpx;
  color: #E65100;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.debug-text:last-child {
  margin-bottom: 0;
}

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F5F5F5;
}

/* 聊天记录区域 */
.chat-messages {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 0;
  overflow-y: auto;
}

.message-list {
  padding-bottom: 20rpx;
}

/* 消息项样式 */
.message-item {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s ease-in;
}

.user-message {
  flex-direction: row-reverse;
}

.bot-message {
  flex-direction: row;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-message .message-avatar {
  background: #4A90E2;
}

.bot-message .message-avatar {
  background: #F0F0F0;
}

.message-content {
  max-width: 70%;
  margin: 0 20rpx;
}

.user-message .message-content {
  text-align: right;
}

.message-text {
  background: #4A90E2;
  color: #FFFFFF;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  display: inline-block;
}

.user-message .message-text {
  background: #4A90E2;
  border-bottom-right-radius: 8rpx;
}

.bot-message .message-text {
  background: #FFFFFF;
  color: #333333;
  border: 1rpx solid #E5E5E5;
  border-bottom-left-radius: 8rpx;
}

.message-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.user-message .message-time {
  text-align: right;
}

/* 消息操作按钮 */
.message-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
  justify-content: flex-start;
}

.action-btn {
  background: #F5F5F5;
  color: #666666;
  border: 1rpx solid #DDDDDD;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.action-btn:active {
  background: #E5E5E5;
}

.copy-btn {
  background: #E3F2FD;
  color: #1976D2;
  border-color: #BBDEFB;
}

.like-btn.liked {
  background: #FFE0E0;
  color: #D32F2F;
  border-color: #FFCDD2;
}

/* 加载状态 */
.loading-message {
  display: flex;
  margin-bottom: 30rpx;
}

.typing-indicator {
  display: flex;
  gap: 8rpx;
  padding: 20rpx 24rpx;
  background: #FFFFFF;
  border: 1rpx solid #E5E5E5;
  border-radius: 20rpx;
  border-bottom-left-radius: 8rpx;
}

.typing-dot {
  width: 12rpx;
  height: 12rpx;
  background: #999999;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) { animation-delay: -0.32s; }
.typing-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 聊天输入区域 */
.chat-input-area {
  background: #FFFFFF;
  border-top: 1rpx solid #E5E5E5;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-container {
  background: #F8F9FA;
  border-radius: 24rpx;
  padding: 16rpx;
}

.button-group {
  display: flex;
  margin-top: 16rpx;
  align-items: center;
  justify-content: center;
}

.message-input {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  background: transparent;
  border: none;
  font-size: 28rpx;
  line-height: 1.5;
  resize: none;
}

.message-input:focus {
  outline: none;
}

.input-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999999;
}

.send-btn {
  background: #CCCCCC;
  color: #FFFFFF;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  flex: 1;
}

.send-btn.active {
  background: #4A90E2;
}

.send-btn.active:active {
  background: #357ABD;
}

.send-btn[disabled] {
  background: #CCCCCC !important;
  color: #999999 !important;
  opacity: 0.6;
  cursor: not-allowed;
}

.send-btn:not([disabled]) {
  cursor: pointer;
}

/* 状态指示器 */
.status-indicator {
  text-align: center;
  margin-top: 16rpx;
  padding: 12rpx;
  background: #E3F2FD;
  border-radius: 16rpx;
}

.status-text {
  font-size: 24rpx;
  color: #1976D2;
}

/* 测试按钮样式 */
.test-btn {
  background: #FF9800;
  color: #FFFFFF;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.test-btn:active {
  background: #F57C00;
}

/* 快捷问题 */
.quick-questions {
  background: #FFFFFF;
  border-top: 1rpx solid #E5E5E5;
  padding: 30rpx 20rpx;
}

.quick-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  text-align: center;
}

.quick-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
}

.quick-item {
  background: #F0F8FF;
  color: #4A90E2;
  border: 1rpx solid #BBDEFB;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.quick-item:active {
  background: #E3F2FD;
  transform: scale(0.95);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .message-content {
    max-width: 80%;
  }
  
  .input-area {
    padding: 16rpx;
  }
  
  .quick-questions {
    padding: 20rpx 16rpx;
  }
}







