/* 历史页面样式 */

/* 调试信息样式 */
.debug-info {
  background: #FFF3E0;
  border: 1rpx solid #FFB74D;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.debug-text {
  font-size: 24rpx;
  color: #E65100;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.debug-text:last-child {
  margin-bottom: 0;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #F5F5F5;
}

/* 页面头部 */
.page-header {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 16rpx 28rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  border: none;
}

.refresh-btn, .action-btn {
  background: #4A90E2;
  color: white;
}

.action-btn.danger {
  background: #ff4757;
  color: white;
}

/* 对话列表 */
.conversations-section {
  padding: 20rpx;
}

.conversation-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.conversation-item:active {
  transform: scale(0.98);
}

.conversation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.conversation-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.conversation-time {
  font-size: 24rpx;
  color: #999;
}

.conversation-preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.conversation-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.conversation-stats {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 消息详情 */
.messages-section {
  background: white;
  min-height: 100vh;
  padding: 20rpx;
}

.messages-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.back-btn {
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.conversation-info {
  flex: 1;
  text-align: center;
}

.conversation-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.conversation-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 消息列表 */
.message-list {
  padding-bottom: 40rpx;
}

.message-item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.message-user {
  align-items: flex-end;
}

.message-bot {
  align-items: flex-start;
}

.message-content {
  max-width: 80%;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.message-user .message-content {
  background: #4A90E2;
  color: white;
  border-bottom-right-radius: 8rpx;
}

.message-bot .message-content {
  background: #f0f0f0;
  color: #333;
  border-bottom-left-radius: 8rpx;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

.message-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 12rpx;
  justify-content: center;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
}

.action-item:active {
  background: #e9ecef;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.empty-action {
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 44rpx;
  height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 26rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.no-more {
  color: #ccc;
}

/* 登录提示 */
.login-tip {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.tip-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.login-btn {
  background: #4A90E2;
  color: white;
  border: none;
  border-radius: 44rpx;
  height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
}





